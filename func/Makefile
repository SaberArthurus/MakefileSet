obj := $(wildcard *.cpp)
#$(subst <from>,<to>,<text>)
objsubst := $(subst .cpp, .o, $(obj))
objpatsubst := $(patsubst %.cpp, %.o, $(obj))
objfilter := $(filter %.cpp, $(obj) book.h)
objfilterout := $(filter-out %.cpp, $(obj) book.h)
objword := $(word 2, $(obj)) # from 1 start
objdir := $(dir $(obj))
objnotdir := $(notdir $(obj))
objsuffix := $(suffix $(obj))
objbasename := $(basename $(obj))
objaddsuffix := $(addsuffix .c, $(objbasename))
objjoin := $(join aaa bbb ccc, $(obj))
objforeach := $(foreach n, $(obj), $(n).example)
objif := $(if $(obj), $(obj), $(obj) notif)
objcontents := $(shell cat $(strip $(objword)))

all:
	@echo $(obj)
	@echo $(objsubst)
	@echo $(objpatsubst)
	@echo $(objfilter)
	@echo $(objfilterout)
	@echo $(objword)
	@echo $(objdir)
	@echo $(objnotdir)
	@echo $(objsuffix)
	@echo $(objbasename)
	@echo $(objaddsuffix)
	@echo $(objjoin)
	@echo $(objforeach)
	@echo $(objif)
	echo $(objcontents)